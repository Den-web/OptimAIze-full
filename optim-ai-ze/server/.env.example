# Server Configuration
NODE_ENV=production
PORT=5000
API_PREFIX=/api

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/optimaize

# JWT Configuration
